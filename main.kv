                text: "ชื่อการทดลอง"
                font_name: 'THSarabun Bold.ttf'
                font_size: 60

            MDTextField:
                id: name
                mode: 'rectangle'
                font_name: 'THSarabun Bold.ttf'
                font_size: 60

            Label:
            MDLabel:
                text: "สารเคมีที่ใช้"
                font_name: 'THSarabun Bold.ttf'
                font_size: 60

            MDTextField:
                id: chem1
                mode: 'rectangle'
                font_name: 'THSarabun Bold.ttf'
                font_size: 60

            MDTextField:
                id: chem2
                mode: 'rectangle'
                font_name: 'THSarabun Bold.ttf'
                font_size: 60

            MDTextField:
                id: chem3
                mode: 'rectangle'
                font_name: 'THSarabun Bold.ttf'
                font_size: 60

            MDTextField:
                id: chem4
                mode: 'rectangle'
                font_name: 'THSarabun Bold.ttf'
                font_size: 60


            Label:
            MDLabel:
                text: "วันที่ทดลอง"
                font_name: 'THSarabun Bold.ttf'
                font_size: 60
            MDTextField:
                id: date
                mode: 'rectangle'
                font_name: 'THSarabun Bold.ttf'
                font_size: 60

            Label:
            MDLabel:
                text: "ครั้งที่"
                font_name: 'THSarabun Bold.ttf'
                font_size: 60

            MDTextField:
                id: no
                mode: 'rectangle'
                font_name: 'THSarabun Bold.ttf'
                font_size: 60

            Label:
            GridLayout:
                cols:3
                Label:
                MDFillRoundFlatButton:
                    id: next1
                    text: "   ถัดไป   "
                    font_name: 'THSarabun Bold.ttf'
                    font_size: 30
                    pos_hint: {"center_x": 0.5}
                    height: dp(40)
                    on_release:
                        root.input_lab_information()
                Label:

    BoxLayout:
        MDToolbar:
            elevation : 8
            pos_hint: {"top": 1, "left": 1}

<ChooseIMGScreen>
    id: choose_img_id
    name: 'cimg'
    MDFillRoundFlatButton:
        text: "   แกลลอรี่   "
        font_name: 'THSarabun Bold.ttf'
        font_size: 30
        pos_hint: {"center_x": .5, "center_y": .5}
        size_hint: None, None
        height: dp(40)
        on_press:
            choose_img_id.file_manager_open()
            root.manager.current = 'picpre'
    BoxLayout:
        MDToolbar:
            left_action_items: [["arrow-left",  lambda x: app.change_screen('home')]]
            elevation : 8
            pos_hint: {"top": 1, "left": 1}

<PreProcessScreen>
    id: pic_pre_id
    name: 'picpre'
    BoxLayout :
        orientation : 'vertical'
        padding : '60dp'
        spacing : '25dp'
        Label:
            size_hint: (1, 0.10)
        MDLabel:
            text: "ชื่อรูปภาพ"
            font_name: 'THSarabun Bold.ttf'
            font_size: 60
            size_hint:(0.5, .1)


        MDLabel:
            id: file_name_id
            text: ""
            font_name: 'THSarabun Bold.ttf'
            font_size: 60
            size_hint:(0.5, .1)

        ImageButton:
            id: show_pre
            source: app.img_source_path
            canvas.before:
                Color:
                    rgba: 0, 0, 0, 0
                Rectangle:
                    size: self.size
                    pos: self.pos

        MDFillRoundFlatButton:
            text: "ประมวลผลรูปภาพ"
            font_name: 'THSarabun Bold.ttf'
            font_size: 20
            height: dp(40)
            pos_hint: {"center_x": .5, "center_y": .5}
            on_press:
                app.img_detect()
                pic_pre_id.post()
                Factory.Progress().open()
                root.manager.current = 'picpost'

    BoxLayout:
        MDToolbar:
            left_action_items: [["arrow-left",  lambda x: app.change_screen('cimg')]]
            elevation : 8
            pos_hint: {"top": 1, "left": 1}

<PostProcessScreen>
    name: 'picpost'
    BoxLayout :
        orientation : 'vertical'
        padding : '30dp'
        spacing : '15dp'
        MDLabel:
            size_hint: (1, 0.10)
        ImageButton:
            id: show_post
            source: app.img_source_path
            canvas.before:
                Color:
                    rgba: 0, 0, 0, 0
                Rectangle:
                    size: self.size
                    pos: self.pos

        MDFillRoundFlatButton:
            text: "แสดงไฟล์เอกซ์เซล"
            font_name: 'THSarabun Bold.ttf'
            font_size: 30
            height: dp(40)
            pos_hint: {"center_x": .5, "center_y": .5}


        MDFillRoundFlatButton:
            text: "      ถัดไป      "
            font_name: 'THSarabun Bold.ttf'
            font_size: 30
            height: dp(40)
            pos_hint: {"center_x": .5, "center_y": .5}
            on_press:
                root.manager.current = 'initial'

    BoxLayout:
        MDToolbar:
            left_action_items: [["arrow-left",  lambda x: app.change_screen('cimg')]]
            elevation : 8
            pos_hint: {"top": 1, "left": 1}

